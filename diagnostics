import numpy as np
import pptk


def display_voxel_points(voxel_dict, points, density=1.0):
    mu = voxel_dict['mu']
    sigma = voxel_dict['sigma']
    plot_number = np.int(density*100)
    plot_dist = np.random.multivariate_normal(mu, sigma, plot_number)
    pptk.viewer(plot_dist, points)
    return None